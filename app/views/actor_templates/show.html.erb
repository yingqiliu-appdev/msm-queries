<h1>
  Actor #<%= @actor.id%> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>


<a href="/delete_actor/<%= @actor.id%>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @actor.image %>?set=set2">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@actor.updated_at)%> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @character.each do |a_character| %>
  <tr>
    <td>
      <% m = Movie.where({ :id => a_character.movie_id }).at(0) %>
      <%= m.title%>
    </td>
    <td>
      <% m = Movie.where({ :id => a_character.movie_id }).at(0) %>
      <%= m.year%>
    </td>
    <td> 
      <% m = Movie.where({ :id => a_character.movie_id }).at(0) %>
      <% d = Director.where({ :id => m.director_id}).at(0) %>
      <%= d.name%>
    </td>
      <td>
      <%= a_character.name%>
    </td>
     <td>
      <a href="/movies/<%= a_character.movie_id %>" >
        Show details
    </td>
  </tr>
<% end %>
</table>